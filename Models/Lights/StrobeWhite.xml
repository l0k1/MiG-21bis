<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

<!-- white flashing beacon -->

<!-- rembrandt auto switching for glass -->
  <effect>
  <inherits-from>Effects/model-transparent</inherits-from>
  <condition>
    <property>sim/rendering/rembrandt/enabled</property>
  </condition>
   <object-name>light</object-name>
   <object-name>Light</object-name>
  </effect>

<!-- Turns off non rembrant lighting and effects -->
<animation>
        <type>select</type>
       	<object-name>whitebeacon</object-name>
		<condition>
            <not>
            <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
    </animation>	




  <model>
   <name>whitebeacon</name>
  <path>Aircraft/Mig-21bis/Models/Lights/normal/StrobeWhite.xml</path>
   <offsets>
     <x-m>0</x-m>
     <y-m>0</y-m>
     <z-m>0</z-m>
   </offsets>
 </model>
 
 <model>
   <name>whitebeacon1</name>
  <path>Aircraft/Mig-21bis/Models/Lights/remb/StrobeLight.xml</path>
   <offsets>
     <x-m>0</x-m>
     <y-m>0</y-m>
     <z-m>0</z-m>
   </offsets>
 </model>

</PropertyList>
